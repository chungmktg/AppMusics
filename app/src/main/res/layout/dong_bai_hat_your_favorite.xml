<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#292D39"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_your_favorite_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/fontmaster"
            android:text="1"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:textColor="#89ffffff"
            />
        <TextView
            android:id="@+id/txt_your_favorite_tenbaihat"
            android:fontFamily="@font/fontmaster"
            android:text="ten bai hat"
            android:textSize="20sp"
            android:layout_toRightOf="@id/txt_your_favorite_index"
            android:layout_marginLeft="10dp"
            android:textColor="#7dffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_your_favorite_casi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ten ca si"
            android:fontFamily="@font/fontmaster"
            android:textSize="15sp"
            android:layout_below="@id/txt_your_favorite_tenbaihat"
            android:layout_toRightOf="@id/txt_your_favorite_index"
            android:layout_marginLeft="10dp"
            android:textColor="#9affffff"
            />
        <ImageView
            android:src="@drawable/love"
            android:id="@+id/img_your_favorite_iconlove"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
