<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:background="@drawable/custom_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relativelBaihatyeuthich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txttitleBaihat"
            android:text="BÀI HÁT YÊU THÍCH"
            android:fontFamily="@font/fontmaster"
            android:textColor="#90ffffff"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_baihatyeuthich_phattatca"
            android:textSize="15dp"
            android:fontFamily="@font/fontmaster"
            android:textColor="#83ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phát tất cả"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerBaihathot"
        android:layout_below="@id/relativelBaihatyeuthich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
