<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#292D39"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:id="@+id/imghinhbaihathot"
            />
        <TextView
            android:id="@+id/txt_tenbaihathot"
            android:fontFamily="@font/fontmaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên bài hát"

            android:textSize="18dp"
            android:textColor="#7cffffff"
            android:layout_margin="5dp"
            android:maxLines="1"
            android:layout_toRightOf="@id/imghinhbaihathot"/>
        <TextView
            android:id="@+id/tencasiBaihathot"
            android:fontFamily="@font/fontmaster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tên ca sĩ"
            android:layout_toRightOf="@id/imghinhbaihathot"
            android:layout_below="@id/txt_tenbaihathot"
            android:layout_margin="5dp"
            android:textColor="#87ffffff"
            android:textSize="18dp"
            android:maxLines="1"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/iconlove"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:src="@drawable/love"
            />
    </RelativeLayout>


</android.support.v7.widget.CardView>
