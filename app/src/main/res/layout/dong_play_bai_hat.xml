<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#292D39"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_index_playnhac"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:fontFamily="@font/fontmaster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:paddingLeft="5dp"
                android:textSize="17sp"
                android:textColor="#81ffffff"
                />
            <TextView
                android:id="@+id/txt_tenbaihat_playnhac"
                android:fontFamily="@font/fontmaster"
                android:maxLines="2"
                android:text="ten bai hat"
                android:textSize="20sp"
                android:layout_toRightOf="@id/txt_index_playnhac"
                android:layout_marginLeft="10dp"
                android:textColor="#8fffffff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_casi_playnhac"
                android:singleLine="true"
                android:fontFamily="@font/fontmaster"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txt_index_playnhac"
                android:layout_below="@id/txt_tenbaihat_playnhac"
                android:text="ten ca si"
                android:textColor="#87ffffff"
                android:textSize="15sp" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>
