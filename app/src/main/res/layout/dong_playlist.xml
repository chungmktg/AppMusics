<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:background="@drawable/custom_background"
    android:padding="10dp"
    app:cardCornerRadius="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageview_background_playlit"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="110dp" />
        <ImageView
            android:id="@+id/imageviewPlaylist"
            android:layout_alignBottom="@id/imageview_background_playlit"
            android:layout_marginRight="15dp"
            android:layout_alignRight="@id/imageview_background_playlit"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/txttenplaylist"
            android:textColor="#77ffffff"
            android:fontFamily="@font/fontmaster"
            android:textSize="13dp"
            android:text="những bài hot của Sơn Tùng"
            android:layout_alignBottom="@id/imageviewPlaylist"
            android:layout_toLeftOf="@id/imageviewPlaylist"
            android:maxLines="1"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</RelativeLayout>
