<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_background"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.chungpro.appmusics.Activity.PlaynhacActivity">
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbarPlaynhac"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize">

</android.support.v7.widget.Toolbar>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_playnhac"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_timesongPlaynhac"
                android:fontFamily="@font/fontmaster"
                android:textColor="#91ffffff"
                android:layout_weight=".5"
                android:text="00:00"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <SeekBar
                android:layout_weight="9"
                android:id="@+id/seekbarSongPlaynhac"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_timesongTotalPlaynhac"
                android:fontFamily="@font/fontmaster"
                android:textColor="#91ffffff"
                android:textStyle="bold"
                android:text="00:00"
                android:layout_weight="0.5"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:src="@drawable/iconsuffle"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imgButtonSuffle"
                android:layout_marginRight="25dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <ImageButton
                android:src="@drawable/iconpreview"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imgButtonrepre"
                android:layout_marginRight="25dp"
                android:layout_width="35sp"
                android:layout_height="35sp" />
            <ImageButton
                android:src="@drawable/iconplay"
                android:scaleType="fitXY"
                android:background="@null"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imgButtonplay"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            android:layout_height="50dp" />
            <ImageButton
                android:src="@drawable/iconnext"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imgButtonnext"
                android:layout_marginLeft="25dp"
                android:layout_width="35sp"
                android:layout_height="35sp" />
            <ImageButton
                android:src="@drawable/iconrepeat"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imgButtonrepeat"
                android:layout_marginLeft="25dp"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
