<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_background"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/custom_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgbackground_banner"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_alignBottom="@id/imgbackground_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/img_baihatbanner"
                android:padding="2dp"
                android:layout_width="70dp"
                android:layout_height="70dp" />
            <TextView
                android:id="@+id/txt_title_bannerbaihat"
                android:fontFamily="@font/fontmaster"
                android:textSize="17sp"
                android:text="chạy ngay đi"
                android:textColor="#ffffff"
                android:padding="5dp"
                android:layout_toRightOf="@id/img_baihatbanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_below="@id/txt_title_bannerbaihat"
                android:layout_toRightOf="@id/img_baihatbanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>
