<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/custom_background"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:text="NHỊP ĐIỆU CUỘC SỐNG"
        android:fontFamily="@font/fontmaster"
        android:textColor="#93ffffff"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/txttitlePlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/lvDanhSachPlayList"
        android:layout_below="@id/txttitlePlayList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <TextView

        android:id="@+id/txtMorePlaylist"
        android:text="more Playlist"
        android:drawableLeft="@drawable/more_playlist"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_below="@id/lvDanhSachPlayList"
        android:layout_height="wrap_content" />

</RelativeLayout>
